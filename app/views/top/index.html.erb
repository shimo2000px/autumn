    <%= link_to "遊び方", usage_path,
      class: "px-6 py-3 sm:px-8 sm:py-4 md:px-12 md:py-6 bg-red-400 hover:bg-red-500 rounded-xl text-lg sm:text-xl md:text-2xl text-white font-semibold transition" %>

    <%= link_to "ゲームを始める", games_path,
      class: "px-6 py-3 sm:px-8 sm:py-4 md:px-12 md:py-6 bg-yellow-400 hover:bg-yellow-500 text-white rounded-xl text-lg sm:text-xl md:text-2xl font-bold transition" %>
